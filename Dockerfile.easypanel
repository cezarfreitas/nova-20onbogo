# Dockerfile alternativo para EasyPanel
FROM node:20-alpine

WORKDIR /app

# Copiar e instalar
COPY package*.json ./
RUN npm install

# Copiar código e build
COPY . .
RUN npm run build

# Copiar script de start
COPY start.sh ./
RUN chmod +x start.sh

# Configuração
EXPOSE 80
ENV NODE_ENV=production

# Usar script de start
CMD ["./start.sh"]

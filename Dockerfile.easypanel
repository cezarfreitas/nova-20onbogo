# Dockerfile alternativo para EasyPanel
FROM node:20-alpine

WORKDIR /app

# Copiar e instalar
COPY package*.json ./
RUN npm install

# Copiar código e build
COPY . .
RUN npm run build

# Dependências utilitárias para healthcheck
RUN apk add --no-cache curl

# Configuração
EXPOSE 80
ENV NODE_ENV=production
ENV PORT=80
ENV HOST=0.0.0.0

# Iniciar via servidor Node custom que força PORT=80
CMD ["node", "server.js"]

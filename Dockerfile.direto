# Dockerfile alternativo - execução direta
FROM node:20-alpine

WORKDIR /app

# Dependências
COPY package*.json ./
RUN npm ci

# Código e build
COPY . .
RUN npm run build

# Configuração
ENV NODE_ENV=production
ENV PORT=80
ENV HOST=0.0.0.0

EXPOSE 80

# Execução direta do SvelteKit
CMD ["node", "build"]
